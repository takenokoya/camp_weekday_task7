<h2 class="mt-3 mb-3">Article Detail</h2>
<table class="table table-bordered table-striped">
  <thead>
    <tr><th><%= @article.title %></th></tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= simple_format(@article.body) %><br>
        <%= link_to "Articles", articles_path, class: "btn btn-dark" %>
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-dark ml-2" %>
        <%= link_to "Delete", article_path(@article), class: "btn btn-dark ml-2", method: :delete, data: { confirm: "削除してよろしいですか？" } %>
      </td>
    </tr>
  </tbody>
</table>
